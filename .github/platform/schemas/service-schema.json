{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ServiceConfig",
  "type": "object",
  "required": ["metadata", "container", "service"],
  "properties": {
    "metadata": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": { "type": "string", "minLength": 1 },
        "description": { "type": "string" }
      },
      "additionalProperties": true
    },
    "container": {
      "type": "object",
      "required": ["port", "imageRepository"],
      "properties": {
        "port": { "type": "integer", "minimum": 1, "maximum": 65535 },
        "imageRepository": { "type": "string", "minLength": 1 }
      },
      "additionalProperties": true
    },
    "replicas": {
      "type": "object",
      "properties": {
        "default": { "type": "integer", "minimum": 1 }
      },
      "additionalProperties": true
    },
    "resources": {
      "type": "object",
      "additionalProperties": true
    },
    "hpa": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "minReplicas": { "type": "integer", "minimum": 1 },
        "maxReplicas": { "type": "integer", "minimum": 1 },
        "targetCPU": { "type": "integer", "minimum": 1, "maximum": 100 },
        "targetMemory": { "type": "integer", "minimum": 1, "maximum": 100 }
      },
      "additionalProperties": true
    },
    "service": {
      "type": "object",
      "required": ["type", "port"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["ClusterIP", "NodePort", "LoadBalancer"]
        },
        "port": { "type": "integer", "minimum": 1, "maximum": 65535 }
      },
      "additionalProperties": true
    },
    "ingress": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "host": { "type": "string" }
      },
      "additionalProperties": true
    },
    "networkPolicy": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" }
      },
      "additionalProperties": true
    },
    "probes": {
      "type": "object",
      "additionalProperties": true
    },
    "environment": {
      "type": "object",
      "additionalProperties": true
    },
    "serviceAccount": {
      "type": "object",
      "additionalProperties": true
    },
    "monitoring": {
      "type": "object",
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}


